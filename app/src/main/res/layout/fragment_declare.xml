<?xml version="1.0" encoding="utf-8"?>
<layout >
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cl_app"
            tools:context=".DeclareFragment">

            <EditText
                android:id="@+id/edt_searchDeclare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/background_search_box"
                android:drawableEnd="@drawable/ic_baseline_search_24"
                android:drawablePadding="15dp"
                android:drawableTint="@color/white"
                android:enabled="true"
                android:hint="Search"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20sp"
                android:textStyle="italic" />
            <TextView
                android:id="@+id/tvE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chưa có ai khai báo"
                android:layout_marginTop="200dp"
                android:textSize="20dp"
                android:visibility="gone"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:padding="20dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/revAccountDeclare"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/edt_searchDeclare" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnAddDecalre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:tint="@color/white"
                app:rippleColor="@color/white"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/ic_baseline_add_circle_24"
                />
        </RelativeLayout>
</layout>