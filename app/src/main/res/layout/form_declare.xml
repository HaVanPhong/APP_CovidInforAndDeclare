<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cl_element"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNguoiKB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Khai báo y tế"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Ông/bà có những triệu chứng hay biểu hiện nào sau đây"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbFeverF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sốt"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/cbCaughF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ho"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/cbSrThroatF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sổ mũi"
                android:textColor="@color/white"
                android:textSize="15dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbLoseTasteF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mất mùi"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/cbTiredF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mệt mỏi"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/cbStuffyF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Khó thở"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvDuringPF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Biểu hiện gần đây"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvFxF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Theo quy định của bộ y tế, bạn thuộc diện nào sau đây: "
                    android:textColor="@color/white"
                    android:textSize="15dp" />
                <Spinner
                    android:id="@+id/spnFxF"
                    android:layout_marginLeft="10dp"
                    android:background="@color/white"
                    android:contentDescription="F0 là người dương tính với Covid-19"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <CheckBox
                android:id="@+id/cbTX14F"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiếp xúc người nhiễm Covid trong 14 ngày qua"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/cbGoAbroadF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trở về từ vùng dịch"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/cbIsolutionF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đi cách ly trong vòng 14 ngày qua"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/cbClPPF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Người thân có biểu hiện nhiễm Covid trong vòng 14 ngày qua"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/cbTreatF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đã xuất viện do điều trọ Covid-19 trong 14 ngày qua"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btnSenDeclare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_xanh"
                android:layout_margin="20dp"
                android:text="Gửi khai báo"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>