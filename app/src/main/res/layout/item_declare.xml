<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cl_element"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvNgayKhaiBao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="23/11/2019"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Triệu chứng"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbFever"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sốt"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/cbCaugh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ho"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/cbSrThroat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sổ mũi"
            android:textColor="@color/white"
            android:textSize="15dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbLoseTaste"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mất mùi"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/cbTired"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mệt"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/cbStuffy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Khó thở"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/tvDuringP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Biểu hiện gần đây"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvFx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Thuộc diện: F2"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/cbTX14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiếp xúc người nhiễm Covid trong 14 ngày qua"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/cbGoAbroad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trở về từ vùng dịch"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/cbIsolution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đi cách ly trong vòng 14 ngày qua"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/cbClPP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Người thân có biểu hiện nhiễm Covid"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/cbTreat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đã xuất viện do điều trọ Covid-19 trong 14 ngày qua"
            android:textColor="@color/white"
            android:textSize="15dp" />


    </LinearLayout>

</LinearLayout>